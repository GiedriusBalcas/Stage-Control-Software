<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0-windows</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Platforms>AnyCPU;x64;x86</Platforms>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="common\ShaderHelper.cs" />
    <Compile Remove="LineBufferManager.cs" />
    <Compile Remove="LinePrimitive.cs" />
    <Compile Remove="Window.cs" />
    <Compile Remove="WindowRenderer.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="default-shaders\FragmentShader.frag" />
    <None Remove="default-shaders\VertexShader.vert" />
    <None Remove="grid-shaders\FragmentShader.frag" />
    <None Remove="grid-shaders\VertexShader.vert" />
    <None Remove="grid_scale\FragmentShader.frag" />
    <None Remove="grid_scale\VertexShader_TranlateToEdge.vert" />
    <None Remove="reference_shaders\FragmentShader.frag" />
    <None Remove="reference_shaders\VertexShader_TranlateToEdge.vert" />
    <None Remove="texture-shaders\FragmentShader.frag" />
    <None Remove="texture-shaders\VertexShader.vert" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="default-shaders\FragmentShader.frag">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Content>
    <Content Include="default-shaders\VertexShader.vert">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Content>
    <Content Include="grid-shaders\FragmentShader.frag">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Content>
    <Content Include="grid-shaders\VertexShader.vert">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Content>
    <Content Include="grid_scale\FragmentShader.frag">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Content>
    <Content Include="grid_scale\VertexShader_TranlateToEdge.vert">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Content>
    <Content Include="reference_shaders\FragmentShader.frag">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Content>
    <Content Include="reference_shaders\VertexShader_TranlateToEdge.vert">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Content>
    <Content Include="texture-shaders\FragmentShader.frag">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Content>
    <Content Include="texture-shaders\VertexShader.vert">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="OpenTK" Version="4.8.2" />
    <PackageReference Include="StbTrueTypeSharp" Version="1.26.12" />
    <PackageReference Include="System.Drawing.Common" Version="9.0.0" />
  </ItemGroup>

</Project>
