        <Style TargetType="ListView">
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="BorderBrush"
                    Value="Transparent" />
            <Setter Property="Background"
                    Value="{StaticResource MidBackgroundColorBrush}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListView">
                        <Border x:Name="Bd"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="true">
                            <ScrollViewer Padding="{TemplateBinding Padding}"
                                          Style="{DynamicResource {x:Static GridView.GridViewScrollViewerStyleKey}}">
                                <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                            </ScrollViewer>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsGrouping"
                                     Value="true">
                                <Setter Property="ScrollViewer.CanContentScroll"
                                        Value="false" />
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                     Value="false">
                                <Setter Property="Background"
                                        TargetName="Bd"
                                        Value="{StaticResource DarkBackgroundColorBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style TargetType="ListViewItem"
               x:Key="butcheredLisViewItems">
            <Setter Property="Background"
                    Value="Transparent" />
            <Setter Property="Foreground"
                    Value="{StaticResource FontColorBrush}" />
            <Setter Property="Margin"
                    Value="0,10,0,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListViewItem}">
                        <Border BorderBrush="Transparent"
                                BorderThickness="1"
                                Background="{TemplateBinding Background}">
                            <GridViewRowPresenter HorizontalAlignment="Stretch"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                  Width="Auto"
                                                  Margin="0"
                                                  Content="{TemplateBinding Content}" />
                        </Border>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <!-- Other setters as needed -->
            <Style.Triggers>
                <!-- Removing or modifying the IsMouseOver trigger -->
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <!-- Keep the appearance unchanged on mouse over -->
                    <Setter Property="Background"
                            Value="{StaticResource AccentColorBrush}" />
                    <Setter Property="BorderBrush"
                            Value="{StaticResource LightBackgroundColorBrush}" />
                    <Setter Property="BorderThickness"
                            Value="0.5" />
                </Trigger>
                <Trigger Property="IsSelected"
                         Value="True">
                    <Setter Property="Background"
                            Value="Transparent" />

                    <Setter Property="BorderBrush"
                            Value="{StaticResource LightBackgroundColorBrush}" />
                    <Setter Property="BorderThickness"
                            Value="0.5" />
                </Trigger>
                <Trigger Property="IsEnabled"
                         Value="false">
                    <Setter Property="Background"
                            Value="{StaticResource DarkBackgroundColorBrush}" />
                    <Setter Property="Opacity"
                            Value="1" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background"
                    Value="{StaticResource MidBackgroundColorBrush}" />
            <Setter Property="Foreground"
                    Value="{StaticResource FontColorBrush}" />
            <Setter Property="BorderBrush"
                    Value="{StaticResource LightBackgroundColorBrush}" />
            <Setter Property="BorderThickness"
                    Value="0.5" />
            <Setter Property="TextAlignment"
                    Value="Left" />
        </Style>

        <Style TargetType="Label">
            <Setter Property="Foreground"
                    Value="{StaticResource FontColorBrush}" />
            <Setter Property="FontSize"
                    Value="14" />
        </Style>


        <Style TargetType="Button"
               x:Key="customButtonStyle">
            <Setter Property="Margin"
                    Value="3,0" />
            <Setter Property="Background"
                    Value="{StaticResource MidBackgroundColorBrush}" />
            <Setter Property="Foreground"
                    Value="Red" />
            <Setter Property="Padding"
                    Value="3" />
            <Setter Property="OverridesDefaultStyle"
                    Value="True" />
            <Setter Property="Margin"
                    Value="5" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border"
                                BorderThickness="2,0,2,0"
                                Padding="4,2"
                                BorderBrush="{StaticResource LightBackgroundColorBrush}"
                                CornerRadius="0"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>

                            <!-- Existing Trigger for MouseOver -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver"
                                               Value="True" />
                                    <Condition Property="IsEnabled"
                                               Value="True" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="border"
                                        Property="BorderBrush"
                                        Value="{StaticResource AccentColorBrush}" />
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground"
                    Value="{StaticResource FontColorBrush}" />
            <Style.Triggers>
                <Trigger Property="IsEnabled"
                         Value="False">
                    <Setter Property="Foreground"
                            Value="{StaticResource FontColorDisabledBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Background"
                    Value="{StaticResource MidBackgroundColorBrush}" />
            <Setter Property="Foreground"
                    Value="{StaticResource FontColorBrush}" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <!-- Hover/Overlay Background Color -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="0,0"
                                BorderBrush="White">


                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Mouse Over Color -->
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="{StaticResource AccentColorBrush}" />
                            </Trigger>
                            <!-- Selected Item Background Color -->
                            <Trigger Property="IsSelected"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="{StaticResource DarkBackgroundColorBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style TargetType="ToggleButton"
               x:Key="customToggleButtonStyle">
            <Setter Property="Margin"
                    Value="3,0" />
            <Setter Property="Background"
                    Value="{StaticResource MidBackgroundColorBrush}" />
            <Setter Property="Foreground"
                    Value="Red" />
            <Setter Property="Padding"
                    Value="3" />
            <Setter Property="Margin"
                    Value="5" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Name="border"
                                BorderThickness="2,0,2,0"
                                Padding="4,2"
                                BorderBrush="{StaticResource LightBackgroundColorBrush}"
                                CornerRadius="0"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>

                            <!-- Existing Trigger for MouseOver -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsChecked"
                                               Value="True" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="border"
                                        Property="BorderBrush"
                                        Value="{StaticResource AccentColorBrush}" />
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style>

        <Style TargetType="Button"
