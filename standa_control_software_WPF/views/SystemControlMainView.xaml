<UserControl x:Class="standa_control_software_WPF.views.SystemControlMainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:standa_control_software_WPF.views"
             xmlns:vms="clr-namespace:standa_control_software_WPF.view_models.system_control"
             xmlns:views="clr-namespace:standa_control_software_WPF.views.system_control"
             xmlns:helpers="clr-namespace:standa_control_software_WPF.views.helpers"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <UserControl.Resources>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Background="{StaticResource DarkBackgroundColorBrush}">

        <Grid.Resources>
            <DataTemplate DataType="{x:Type vms:SystemPropertiesViewModel}">
                <views:SystemPropertiesView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:SystemInformtaionViewModel}">
                <views:SystemInformationView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:SystemControlViewModel}">
                <views:SystemControlView />
            </DataTemplate>
        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Column="0"
                Grid.Row="0"
                Grid.ColumnSpan="3"
                Margin="0 0 0 0"
                Background="{StaticResource MidBackgroundColorBrush}"
                BorderBrush="{StaticResource DarkBackgroundColorBrush}"
                BorderThickness="0.5"
                DataContext="{Binding CurrentCompilerViewModel}">
            <StackPanel Orientation="Horizontal" MinHeight="30">
                
                <Button Content="Open"
                        Command="{Binding OpenDocumentCommand}"
                        Style="{StaticResource customButtonStyleForBar}" />
                <Button Content="New"
                        Command="{Binding AddNewDocumentCommand}"
                        Style="{StaticResource customButtonStyleForBar}" />
                <Button Content="Save"
                        Style="{StaticResource customButtonStyleForBar}" />
                <Button Content="Save All"
                        Style="{StaticResource customButtonStyleForBar}" />

                <Separator BorderThickness="0.5"
                           BorderBrush="{StaticResource DarkBackgroundColorBrush}"
                           Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                <Label Content="Active document:"
                       FontSize="12"
                       VerticalAlignment="Center" />
                <Label Content="{Binding SelectedDocument.Name}"
                       FontSize="12"
                       VerticalAlignment="Center"
                       Margin="0" />
                <Separator BorderThickness="0.5"
                           BorderBrush="{StaticResource DarkBackgroundColorBrush}"
                           Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />


                <!--<ListBox  Width="auto" VerticalAlignment="Center">
                    <ListBoxItem  Content="Virtual Config"/>
                </ListBox>-->


            </StackPanel>
        </Border>

        <Border Grid.Column="0"
                Grid.Row="1"
                Grid.ColumnSpan="3"
                Background="{StaticResource MidBackgroundColorBrush}"
                BorderBrush="{StaticResource DarkBackgroundColorBrush}"
                BorderThickness="0.5"
                DataContext="{Binding CurrentCompilerViewModel}">

            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        MinHeight="30">
                <!-- Indeterminate progress bar bound to IsParsing -->
                <Separator BorderThickness="0.5"
                           Margin="10 0 10 0"
                           BorderBrush="{StaticResource DarkBackgroundColorBrush}"
                           Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />

                <Button Command="{Binding CreateCommandQueueFromInput}"
                        Style="{StaticResource customButtonStyleForBar}">
                    <StackPanel Orientation="Horizontal">
                        <Path Width="20"
                              Height="15"
                              Fill="{StaticResource FontColorBrush}"
                              Data="{StaticResource parseIconPath}"
                              Stretch="Uniform" />
                        <TextBlock Text="Parse"
                                   VerticalAlignment="Center"
                                   Margin="5,0,0,0" />
                    </StackPanel>
                </Button>


                <Button Command="{Binding ExecuteCommandQueueCommand}"
                        Style="{StaticResource customButtonStyleForBar}">
                    <StackPanel Orientation="Horizontal">
                        <Path Width="20"
                              Height="15"
                              Fill="{StaticResource FontColorBrush}"
                              Data="{StaticResource executeIcontPath}"
                              Stretch="Uniform" />
                        <TextBlock Text="Execute"
                                   VerticalAlignment="Center"
                                   Margin="5,0,0,0" />
                    </StackPanel>
                </Button>

                <Button Command="{Binding ForceStopCommand}"
                        Style="{StaticResource customButtonStyleForBar}">
                    <StackPanel Orientation="Horizontal">
                        <Path Width="20"
                              Height="15"
                              Fill="{StaticResource FontColorBrush}"
                              Data="{StaticResource stopIconPath}"
                              Stretch="Uniform" />
                        <TextBlock Text="Stop"
                                   VerticalAlignment="Center"
                                   Margin="5,0,0,0" />
                    </StackPanel>
                </Button>


                <Separator BorderThickness="0.5"
                           Margin="10 0 10 0"
                           BorderBrush="{StaticResource DarkBackgroundColorBrush}"
                           Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />

                <TextBlock Text="{Binding ParsingStatusMessage, FallbackValue= 'text in system control VM'}"
                           MinWidth="150"
                           VerticalAlignment="Center"
                           TextWrapping="Wrap" />

                <Separator BorderThickness="0.5"
                           Margin="10 0 10 0"
                           BorderBrush="{StaticResource DarkBackgroundColorBrush}"
                           Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />

                <ProgressBar Height="20"
                             MaxWidth="200"
                             Width="100"
                             IsIndeterminate="{Binding IsParsing}"
                             Margin="0 0 10 0"
                             Visibility="{Binding IsParsing, Converter={StaticResource BoolToVisibilityConverter}}"
                             VerticalAlignment="Center" />

                <Button Content="Cancel"
                        Style="{StaticResource customButtonStyle}"
                        Command="{Binding CancelCommandQueueParsing}"
                        IsEnabled="{Binding IsParsing}"
                        Visibility="{Binding IsParsing, Converter={StaticResource BoolToVisibilityConverter}}" />

                <Separator BorderThickness="0.5"
                           Margin="10 0 10 0"
                           BorderBrush="{StaticResource DarkBackgroundColorBrush}"
                           Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"
                           Visibility="{Binding IsParsing, Converter={StaticResource BoolToVisibilityConverter}}" />


                <CheckBox Content="Allow out of Bounds"
                          IsChecked="{Binding IsAllowedOutOfBounds}" 
                          VerticalAlignment="Center"
                          Visibility="{Binding IsOutOfBounds, Converter={StaticResource BoolToVisibilityConverter}}" />

                <Separator BorderThickness="0.5"
                           Margin="10 0 10 0"
                           BorderBrush="{StaticResource DarkBackgroundColorBrush}"
                           Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"
                           Visibility="{Binding IsOutOfBounds, Converter={StaticResource BoolToVisibilityConverter}}" />





            </StackPanel>

        </Border>


            <Grid Grid.Column="0"
              Grid.Row="2"
              Margin="0,0,0,0">

            <ListBox SelectedItem="{Binding SelectedNavItem}"
                     ItemsSource="{Binding NavigationItems}"
                     VerticalAlignment="Center"
                     BorderBrush="Transparent"
                     d:ItemsSource="{d:SampleData ItemCount=5}"
                     Background="Transparent"
                     Margin="0,0">
                <ListBox.Resources>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background"
                                Value="{StaticResource MidBackgroundColorBrush}" />
                        <Setter Property="Foreground"
                                Value="{StaticResource FontColorBrush}" />
                        <Setter Property="BorderThickness"
                                Value="0" />
                        <Setter Property="Margin"
                                Value="0" />
                        <Setter Property="Padding"
                                Value="0,10,5,10" />
                        <!-- Hover/Overlay Background Color -->
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border Background="{TemplateBinding Background}"
                                            Padding="{TemplateBinding Padding}"
                                            BorderThickness="0,0"
                                            BorderBrush="White">


                                        <ContentPresenter />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <!-- Mouse Over Color -->
                                        <Trigger Property="IsMouseOver"
                                                 Value="True">
                                            <Setter Property="Background"
                                                    Value="{StaticResource AccentColorBrush}" />
                                        </Trigger>
                                        <!-- Selected Item Background Color -->
                                        <Trigger Property="IsSelected"
                                                 Value="True">
                                            <Setter Property="Background"
                                                    Value="{StaticResource DarkBackgroundColorBrush}" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.Resources>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Width="3"
                                       VerticalAlignment="Stretch"
                                       Fill="{StaticResource AccentColorBrush}" />
                            <TextBlock Text="{Binding Header}"
                                       Margin="5,0,0,0">
                                <TextBlock.LayoutTransform>
                                    <RotateTransform Angle="90" />
                                </TextBlock.LayoutTransform>
                            </TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>


        <ContentControl Grid.Row="2"
                        Grid.Column="1"
                        Margin="10 10 10 10"
                        Content="{Binding CurrentViewModel}" />

    </Grid>
</UserControl>
